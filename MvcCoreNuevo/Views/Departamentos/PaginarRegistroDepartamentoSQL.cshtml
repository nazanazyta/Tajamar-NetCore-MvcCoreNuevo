@model MvcCoreNuevo.Models.Departamento

@{
    ViewData["Title"] = "PaginarRegistroDepartamentoSQL";
}

<h1>Paginar Departamento SQL</h1>

<h1 style="color: red">Registro @ViewData["posicion"] de @ViewData["ultimo"]</h1>

<ul class="list-group list-group-horizontal">
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="1">Primero</a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["anterior"]">Anterior</a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["siguiente"]">Siguiente</a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["ultimo"]">Último</a>
    </li>
</ul>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Número</dt>
        <dd class = "col-sm-10">@Model.Numero</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localidad)
        </dd>
    </dl>
</div>
